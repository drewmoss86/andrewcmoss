<%= form_with model: @post, local: true do |form| %>
    <%# check errors %>
    <% if @post.errors.any? %>
        <div id="error_msg">
            <h2>
                <%# displays message stating number of errors preventing save %>
                <%= pluralize(@post.errors.count, "error") %> prevented this post from being saved: 
            </h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :title %> <br />
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :post %> <br />
        <%= form.text_area :post %>
    </p>

    <p> <%= form.submit %> </p>

    <%= link_to 'Back', posts_path %>

<% end %>